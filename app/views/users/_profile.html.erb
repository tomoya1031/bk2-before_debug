<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>follows</th>
		<th>
			<%= link_to following_user_path(user) do %>
			  <%= user.followings.count %>
			<% end %>
		</th>
	</tr>
	<tr>
		<th>followers</th>
		<th>
			<%= link_to followers_user_path(user) do %>
			  <%= user.followers.count %>
			<% end %>
		</th>
	</tr>
</table>

<div class="row">
	<% unless current_user == user %>
	  <% if current_user.following?(user) %>
	　　<%= form_with(model: current_user.following_relationships.find_by(following_id: user.id),method: :delete) do |f| %>
          <%= f.hidden_field :following_id %>
          <%= f.submit "フォロー外す(with)", class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <%= form_with(model: current_user.following_relationships.build) do |f| %>
          <%= f.hidden_field :following_id, value: user.id %>
          <%= f.submit "フォローする(with)", class: "btn btn-success" %>
        <% end %>
      <% end %>
    <% else %>
	  <%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
	<% end %>
</div>